<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://rawgit.com/mntn-dev/kbd/master/kbd.js"></script>  <!-- $.kbd -->


<script type="text/javascript">
//<![CDATA[


var inp=!1;//current input elm


function input_cb(c){

 inp.focus();
 if(c==$.BS/*backspace*/){inp.val(inp.val().slice(0,-1));return;}
 if(inp.attr('id')=='inp2'&&(!c.match(/^[0-9]+$/)||c==$.OK))return; //accept only numeric for #inp2
 inp.val(inp.val()+((c==$.OK/*return/enter*/)?'\n':c));

}



$(function(){

$.kbd({
qwertz:false,
input:input_cb,
hidden:true,
white:true,
});



$('input,textarea').focus(function(){
inp=$(this);
$.kbd.show();
if(inp.attr('id')=='inp2')$.kbd.alt(true); //show alt block (nums)
});



});



//]]>
</script>


